server.py-chat server

import socket
import threading

def handle_client(conn, addr):
    print(f"[NEW CONNECTION] {addr} connected.")
    conn.send("ğŸ‘‹ Hello from Server! Start chatting...\n".encode())

    while True:
        msg = conn.recv(1024).decode()
        if msg.lower() == 'bye':
            print("ğŸ‘‹ Client left the chat.")
            break
        print(f"[Client]: {msg}")
        reply = input("ğŸ§  You (Server): ")
        conn.send(reply.encode())

    conn.close()

server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server.bind(("localhost", 5555))
server.listen(1)
print("[STARTING] Server is waiting for connection...")

conn, addr = server.accept()
thread = threading.Thread(target=handle_client, args=(conn, addr))
thread.start()

client.py-chat client

import socket
import threading

def receive_messages(sock):
    while True:
        try:
            msg = sock.recv(1024).decode()
            print(f"\nğŸ’¬ Server says: {msg}")
        except:
            print("âŒ Connection closed.")
            break

client = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
client.connect(("localhost", 5555))

thread = threading.Thread(target=receive_messages, args=(client,))
thread.start()

print("ğŸ¤– You are connected! Type your message or 'bye' to exit.")
while True:
    message = input("ğŸ§‘ You (Client): ")
    client.send(message.encode())
    if message.lower() == 'bye':
        print("ğŸ‘‹ Exiting chat.")
        break
